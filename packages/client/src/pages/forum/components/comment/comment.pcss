.comment {
  display: flex;
  width: 100%;
  max-width: 800px;
  background: #fff;
  border-radius: 20px;
  margin: 0 0 15px;
  align-items: center;
  text-decoration: none;
  text-transform: uppercase;
  color: #000;

  .author {
    padding: 15px;

    .author-username {
      font-size: 12px;
    }
  }

  .comment__text {
    font-size: 12px;
    line-height: 130%;
    text-align: center;
    border-left: 2px solid #c7c7c7;
    padding: 15px;
  }
}
