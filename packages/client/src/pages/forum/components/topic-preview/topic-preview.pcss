.topic-preview {
  display: flex;
  width: 100%;
  max-width: 1000px;
  background: #fff;
  border-radius: 20px;
  padding: 15px;
  margin: 0 0 25px;
  gap: 40px;
  align-items: center;
  text-decoration: none;
  text-transform: uppercase;
  color: #000;

  .author {
    .author-username {
      font-size: 10px;
    }
  }

  .topic-preview__title {
    font-size: 12px;
    line-height: 130%;
  }
}
