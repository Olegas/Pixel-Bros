.topic-detail {
  width: 100%;
  max-width: 800px;
  background: #fff;
  border-radius: 20px;
  margin: 0 0 25px;
  gap: 40px;
  align-items: center;
  text-decoration: none;
  text-transform: uppercase;
  color: #000;

  .author {
    padding: 35px;

    .author-username {
      font-size: 12px;
    }
  }

  .topic-detail__title {
    font-size: 14px;
    line-height: 130%;
    text-align: center;
    border-top: 2px solid #c7c7c7;
    padding: 35px;
  }
}
