textarea {
  background-color: white;
  width: 800px;
  min-width: 800px;
  max-width: 1000px;
  min-height: 120px;
  max-height: 500px;
  border-radius: 20px;
  font-size: 24px;
  padding: 20px 10px;
  text-align: center;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
  box-sizing: border-box;
}

.field__error {
  text-align: center;
  color: red;
}
